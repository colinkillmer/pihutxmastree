from gpiozero import PWMLED
# This should make each LED fade in then out in number order, ending with the star, repeating 3 times

star = PWMLED(2)
led18 = PWMLED(19)
led5 = PWMLED(25)
led11 = PWMLED(27)
led10 = PWMLED(17)
led21 = PWMLED(11)
led9 = PWMLED(16)
led12 = PWMLED(26)
led14 = PWMLED(9)
led20 = PWMLED(18)
led1 = PWMLED(4)
led7 = PWMLED(5)
led6 = PWMLED(8)
led3 = PWMLED(13)
led24 = PWMLED(22)
led13 = PWMLED(24)
led2 = PWMLED(15)
led15 = PWMLED(12)
led16 = PWMLED(6)
led17 = PWMLED(20)
led4 = PWMLED(21)
led8 = PWMLED(10)
led23 = PWMLED(23)
led19 = PWMLED(14)
led22 = PWMLED(7)


event = 3
while event > 0:
  led1.blink(1,1,1,1,1)
  led2.blink(1,1,1,1,1)
  led3.blink(1,1,1,1,1)
  led4.blink(1,1,1,1,1)
  led5.blink(1,1,1,1,1)
  led6.blink(1,1,1,1,1)
  led7.blink(1,1,1,1,1)
  led8.blink(1,1,1,1,1)
  led9.blink(1,1,1,1,1)
  led10.blink(1,1,1,1,1)
  led11.blink(1,1,1,1,1)
  led12.blink(1,1,1,1,1)
  led13.blink(1,1,1,1,1)
  led14.blink(1,1,1,1,1)
  led15.blink(1,1,1,1,1)
  led16.blink(1,1,1,1,1)
  led17.blink(1,1,1,1,1)
  led18.blink(1,1,1,1,1)
  led19.blink(1,1,1,1,1)
  led20.blink(1,1,1,1,1)
  led21.blink(1,1,1,1,1)
  led22.blink(1,1,1,1,1)
  led23.blink(1,1,1,1,1)
  led24.blink(1,1,1,1,1)
  star.blink(1,1,1,1,1)
  event = event - 1
  
pause()
